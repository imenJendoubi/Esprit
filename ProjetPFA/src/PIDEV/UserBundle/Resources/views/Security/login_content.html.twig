
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}




            <section class="login_content">

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                        <h1>Login</h1>
                        <div>
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div>
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required" />
                        </div>
                        <div>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div>
                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                                   class="btn btn-default submit" />
                            <a class="reset_pass" href="{{ path('fos_user_change_password') }}">Lost your password?</a>

                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">New to site?
                                <a href="{{ path('fos_user_registration_register') }}" class="to_register"> Create Account </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                                <p>Â©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                            </div>
                        </div>

                </form>

            </section>

        {% endblock fos_user_content%}







